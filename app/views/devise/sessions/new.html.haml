= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %section.hero.is-success.is-fullheight
    .hero-body
      .container.has-text-centered
        .column.is-4.is-offset-4
          %h3.title.has-text-grey Login
          %p.subtitle.has-text-grey Please login to proceed.
          .box
            %figure.avatar
              %img{:src => "https://placehold.it/128x128"}/
            %form
              .field
                .control
                  = f.email_field :email, autofocus: true,                                    |
                    autocomplete: "email", class: "input is-large", placeholder: "Your Email" |
              .field
                .control
                  = f.password_field :password, autocomplete: "current-password", |
                    class: "input is-large", placeholder: "Your Password"         |
              .field
                %label.checkbox
                  = f.check_box :remember_me
                  = f.label :remember_me
              .actions
                = f.submit "Log in", class: "button is-block is-info is-large is-fullwidth"
            %p.has-text-grey
              = render "devise/shared/links"
