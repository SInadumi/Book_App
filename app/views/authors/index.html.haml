%section.hero.is-info.is-medium.is-bold
  .hero-body
    .container.has-text-centered
      %p#notice
        = notice
      %p.alert= alert
      - if author_signed_in?
        %h1.title
          こんにちは#{current_author.name}さん
        %br/
        %h2.subtitle
          = link_to("本を登録する。","/books/new", class: "button is-white")
          = link_to("本を編集する。","/authors/#{current_author.id}",class: "button is-white")
      - else
        %h1.title ログインして下さい。
.hero-body
  .container.has-text-centered
    .columns.is-vcentered
      .column.is-4
        %h2.fa-2x 著者一覧
        %table.table.is-fullwidth
          %thead
            %tr
              %th Gender
              %th Name
              %th Age
              %th{:colspan => "3"}
          %tbody
            - @authors.each do |author|
              %tr
                %td= author.gender
                %td= author.name
                %td= author.age
                %td= link_to('Show', author, class: "button is-small is-black is-inverted")
      .column.is-6.is-offset-1
        %h2.fa-2x 書籍一覧
        %table.table.is-fullwidth
          %thead
            %tr
              %th Title
              %th Published at
              %th Price
              %th Author
              %th{:colspan => "3"}
          %tbody
            - @books.each do |book|
              %tr
                %td= book.title
                %td= book.published_at
                %td= book.price
                %td= book.author_id
                %td= link_to('Show',book, class: "button is-small is-black is-inverted")
