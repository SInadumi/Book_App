<p id="notice"><%= notice %></p>
<% if author_signed_in? %>
<h1>こんにちは<%= current_author.name %>さん</h1>
<p>
  <%=link_to("本を登録する。","/books/new")%>
</p>
<h2>著者一覧</h2>
<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.gender %></td>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>

<% else %>
  <h1>ログインして下さい。</h1>
<% end %>

<h2>書籍一覧</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book|%>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.published_at %></td>
      <td><%= book.price %></td>
      <td><%= link_to('Show',book) %></td>
    </tr>
  <% end %>
  </tbody>
</table>