    %nav.navbar.has-shadow
      .container
        .navbar-brand
          -#= link_to(image_tag('Title.png'),"/",class: "navbar-item")
          = link_to("BookApp","/",class: "navbar-item fa-2x")
          .navbar-burger.burger
            #nav-drawer
              %input#nav-input.nav-unshown{:type => "checkbox"}/
              %label#nav-open{:for => "nav-input"}
                %span
              %label#nav-close.nav-unshown{:for => "nav-input"}
              #nav-content 
                %br
                - if author_signed_in?
                  = link_to("変更",edit_author_registration_path, class: "navbar-item fas fa-users-cog")
                  = link_to("",destroy_author_session_path, method: :delete, class: "navbar-item fas fa-sign-out-alt")
                - else
                  = link_to("サインアップ",new_author_registration_path, class: "navbar-item fas fa-user-plus")
                  = link_to("ログイン",new_author_session_path, class: "navbar-item fas fa-sign-in-alt")
      #navMenu.navbar-menu
        .navbar-end
          .navbar-item.has-dropdown.is-hoverable
            %a.navbar-link
              Account
